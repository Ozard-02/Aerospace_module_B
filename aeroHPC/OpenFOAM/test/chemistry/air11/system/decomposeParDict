FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      decomposeParDict;
}

numberOfSubdomains 8;

method          simple;

simpleCoeffs
{
    n           (2 2 2); // 2*2*2 = 8 subdomains
    delta       0.001;
}

// Some versions of OpenFOAM look for 'coeffs' instead of 'simpleCoeffs'
coeffs
{
    n           (2 2 2);
}
