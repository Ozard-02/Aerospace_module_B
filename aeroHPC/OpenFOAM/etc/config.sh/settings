export POLIMI_BIN=$POLIMI_PROJECT_DIR/bin
export POLIMI_APP=$POLIMI_PROJECT_DIR/applications
export POLIMI_SRC=$POLIMI_PROJECT_DIR/src
export POLIMI_DOC=$POLIMI_PROJECT_DIR/doc
export POLIMI_ETC=$POLIMI_PROJECT_DIR/etc

export POLIMI_SOLVERS=$POLIMI_PROJECT_DIR/applications/solvers
export POLIMI_MODULES=$POLIMI_PROJECT_DIR/applications/modules
export POLIMI_UTILITIES=$POLIMI_PROJECT_DIR/applications/utilities
export POLIMI_TUTORIALS=$POLIMI_PROJECT_DIR/tutorials

export POLIMI_APPBIN=$POLIMI_PROJECT_DIR/platforms/$WM_OPTIONS/bin
export POLIMI_LIBBIN=$POLIMI_PROJECT_DIR/platforms/$WM_OPTIONS/lib

export POLIMI_THIRD_PARTY_DIR=$POLIMI_PROJECT_DIR/thirdParty

# check if folders exist
[ ! -d "$POLIMI_APPBIN" ] && mkdir -p "$POLIMI_APPBIN";
[ ! -d "$POLIMI_LIBBIN" ] && mkdir -p "$POLIMI_LIBBIN";

export FOAM_SITE=$WM_PROJECT_INST_DIR/site/$WM_PROJECT_VERSION/etc
# [ ! -d "$FOAM_SITE" ] && mkdir -p "$FOAM_SITE";

export FOAM_USER_SITE=$HOME/.OpenFOAM/$WM_PROJECT_VERSION
[ ! -d "$FOAM_USER_SITE" ] && mkdir -p "$FOAM_USER_SITE";


_foamAddLib $POLIMI_LIBBIN
_foamAddPath $POLIMI_BIN
_foamAddPath $POLIMI_APPBIN
# -----------------------------------------------------------------------


