# Source files, possibly with some verbosity
_foamSource()
{
    while [ $# -ge 1 ]
    do
        [ "$FOAM_VERBOSE" -a "$PS1" ] && echo "Sourcing: $1"
        . $1
       shift
    done
}


# make directory if it doesn't already exist
_foamMkDir()
{
   while [ $# -ge 1 ]
   do
      [ -d $1 ] || mkdir -p $1
      shift
   done
}


# prefix to PATH
_foamAddPath()
{
   while [ $# -ge 1 ]
   do
      export PATH=$1:$PATH
      shift
   done
}


# prefix to LD_LIBRARY_PATH
_foamAddLib()
{
    while [ $# -ge 1 ]
    do
        export LD_LIBRARY_PATH=$1:$LD_LIBRARY_PATH
        shift
    done
}


_foamAddPathAndLib()
{   
   while [ "$#" -ge 1 ]; do
      export PATH=$1/bin:$PATH
      export LD_LIBRARY_PATH=$1/lib64:$1/lib:$LD_LIBRARY_PATH
      export PATH=$1/include:$PATH
      shift
   done
}


_unsetTempVars()
{
    unset _foamAddPath
    unset _foamMkDir
    unset _foamAddLib
    unset _foamSource
    unset etcFolder;
}

